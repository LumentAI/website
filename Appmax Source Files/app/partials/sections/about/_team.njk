{% macro render(args) %}
    {% import "components/Cards/cards.njk" as Card %}

    {% set cardData =[
        {
        img:"./image/home-1/team-1.png",
        title:"Cameron Williamson",
        text:"Co -Founder"
        },
        {
        img:"./image/home-1/team-2.png",
        title:"Brooklyn Simmons",
        text:"Project Manager"
        },
        {
        img:"./image/home-1/team-3.png",
        title:"Robert Fox",
        text:"Web Designer"
        },
        {
        img:"./image/home-1/team-4.png",
        title:"Esther Howard",
        text:"HR Manager"
        }


]%}
    <div class="team-section-01 team-section-01--2 bg-transparent">
        <div class="team-section-01--2__shape">
            <img src="./image/about/shape.svg" class="w-100" alt="team-shape">
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl-4 col-lg-6 col-md-8 col-sm-10 col-xs-10">
                    <div class="section-title section-title--team-01 text-center">
                        <h2 class="title">Our qualified team</h2>
                        <p class="text-dark">
                    Fully layered dolor sit amet, consectetur Facere, nobis, id expedita dolores officiis laboriosam.
                    </p>
                    </div>
                </div>
            </div>
            <div class="four-row-mobile-slider team-slider--01  mobile-slider row">
                {% for item in cardData%}
                    <div class="col-lg-3">
                        {{Card.Team01({
                        img:item.img,
                        title:item.title,
                        text:item.text
                    })}}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endmacro %}