                        <p class="text-dark">An enim nullam tempor sapien gravida donec enim ipsum porta <br class="d-none d-xl-block"> justo integer at odio velna vitae auctor integer congue </p>
                        <a class="btn btn-primary btn-primary-hvr" href="#">Get Started</a>
                    </div>
                </div>
                <div class="col-lg-6 offset-xl-1 col-lg-6">
                    <div class="row justify-content-center widgets-row about-section-06__card-group">
                        {% for item in featureData %}
                            <div class="col-xl-6 col-lg-6 col-sm-6 col-xs-6 col-11" data-aos="fade-up" data-aos-delay="{{ 200 * item.id }}" data-aos-duration="1000">
                                {{Widget.normal({
                                modifier:"widget-card",
                                iconImage:item.iconImage,
                                title:item.title,
                                text:item.text
                            })}}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
