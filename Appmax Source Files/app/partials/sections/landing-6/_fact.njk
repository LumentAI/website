{% macro render(options) %}
    {% import "components/_widget.njk" as Widget %}

    {% set counterData =[
        {
        title:"<span class='counter'>28</span>K",
        text:"Total Users"
        },
        {
        title:"<span class='counter'>13</span>K",
        text:"Download"
        },
        {
        title:"<span class='counter'>68</span>K",
        text:"Social Likes"
        },
        {
        title:"<span class='counter'>10</span>K",
        text:"5 Star Rating"
        }

]%}
    <div class="counter-section-06">
        <div class="container">
            <div class="row justify-content-center widgets-row">
                {%for item in counterData %}
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-xs-6 col-8">
                        {{Widget.counter({
                            modifier:"widget-column-center widget-counter",
                            title:item.title,
                            text:item.text
                        })}}
                    </div>
                    {%endfor%}
                </div>
            </div>
        </div>
    {% endmacro %}