{% macro render(args) %}
    {% import "components/Cards/cards.njk" as Card %}

    {% set cardData =[
        {
        id:1,
        img:"./image/home-1/team-1.png",
        title:"Cameron Williamson",
        text:"Co -Founder"
        },
        {
        id:2,
        img:"./image/home-1/team-2.png",
        title:"Brooklyn Simmons",
        text:"Project Manager"
        },
        {
        id:3,
        img:"./image/home-1/team-3.png",
        title:"Robert Fox",
        text:"Web Designer"
        },
        {
        id:4,
        img:"./image/home-1/team-4.png",
        title:"Esther Howard",
        text:"HR Manager"
        }


]%}
    <div class="team-section-01">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl-4 col-lg-6 col-md-9 col-xs-11">
                    <div class="section-title section-title--team-01 text-center">
                        <h2 class="title">Our qualified team</h2>
                        <p class="text-dark">
                    Fully layered dolor sit amet, consectetur Facere, nobis, id expedita dolores officiis laboriosam.
                    </p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-12 col-md-9 col-xs-11">
                    <div class="mobile-slider four-row-mobile-slider team-slider--01 row">
                        {% for item in cardData%}
                            <div class="col-lg-3" data-aos="fade-up" data-aos-delay="{{ 200 * item.id }}" data-aos-duration="1000">
                                {{Card.Team01({
                        img:item.img,
                        title:item.title,
                        text:item.text
                    })}}
                            </div>
                        {% endfor %}
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endmacro %}