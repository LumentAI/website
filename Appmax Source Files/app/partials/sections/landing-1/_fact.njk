```````````````````{% macro render(options) %}
    {% import "components/_widget.njk" as Widget %}

    {% set counterData =[
        {
        color:"text-bule",
        title:"<span class='counter'>28</span>K",
        text:"Total Users"
        },
        {
        color:"text-yellow",
        title:"<span class='counter'>13</span>K",
        text:"Lifetime Downloads"
        },
        {
        color:"text-green",
        title:"<span class='counter'>68</span>K",
        text:"Social Likes"
        },
        {
        color:"text-red",
        title:"<span class='counter'>10</span>K",
        text:"5 Star Ratings"
        }

]%}
    <div class="counter-section-01 bg-default">
        <div class="container">
            <div class="row justify-content-center widgets-row-02">
                {%for item in counterData %}
                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-6">
                        {{Widget.counter({
                            modifier:"widget-column-center widget-counter-lg",
                            titleClass:item.color,
                            title:item.title,
                            text:item.text
                        })}}
                    </div>
                    {%endfor%}
                </div>
            </div>
        </div>
    {% endmacro %}