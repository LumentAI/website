{% macro render(args) %}
  {% import "components/Cards/pricings.njk" as PricingCard %}
  <div class="pricing-section-01">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
          <div class="section-title pricing-section-01__title">
            <h6 class="subtitle text-primary">Pricing & Plans </h6>
            <h2 class="title">We have exclusive <br class="d-none d-xs-block"> plans for you to choose</h2>
            <div class="pricing-section-01__button">
              <label class="mb-3 mb-lg-0 pricing-section-01__button--text text-dark">Monthly</label>
              <div class="btn-toggle__wrapper mb-3 mb-lg-0" >
                <input class="btn-toggle price-deck-trigger" type="checkbox" id="btn-toggle" checked data-target="#table-price-value"/>
                <label for="btn-toggle"></label>
              </div>
              <label class="mb-3 mb-lg-0 pricing-section-01__button--text text-dark">Yearly</label>
            </div>
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-lg-12 col-md-9 col-xs-11">
          <div class="row pricing-sider mobile-slider three-row-mobile-slider" data-pricing-dynamic id="table-price-value" data-value-active="yearly">
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1000">
              {{PricingCard.One({
              plan:"Starter",
              price:{
                monthly:"$15",
                yearly:"$5"
              },
              listOne:"10 GB Disk Space",
              listTwo:"1 Year Support",
              listThree:"500 Queries",
              listFour:"Basic Statistics",
              listFive:"Free Custom Domain"
            })}}
            </div>
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="400" data-aos-duration="1000">
              {{PricingCard.One({
              activeWrapper:"active",
              plan:"Basic",
              btnActive:"active",
              price:{
                monthly:"$65",
                yearly:"$45"
              },
              listOne:"500 GB Disk Space",
              listTwo:"5 Year Support",
              listThree:"1000 Queries",
              listFour:"Basic Statistics",
              listFive:"Free Custom Domain"
            })}}
            </div>
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="600" data-aos-duration="1000">
              {{PricingCard.One({
              plan:"Premium",
              price:{
                monthly:"$165",
                yearly:"$120"
              },
              listOne:"800 GB Disk Space",
              listTwo:"Unlimited Support",
              listThree:"Unlimited Queries",
              listFour:"Full Statistics",
              listFive:"Free Custom Domain"
            })}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endmacro %}