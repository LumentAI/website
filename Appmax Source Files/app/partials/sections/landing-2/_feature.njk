{% macro render(args) %}
    {% import "components/_widget.njk" as Widget %}
    {% set featureData = [
    {   id:1,
        title:"Innovative Soluation",
        icon:"./image/home-2/feature-icon-01.svg",
        text:"Fully layered dolor adipisicing elit <br class='d-none d-xl-block'> facere,  nobis, id expedita."
    },
    {   id:2,
        title:"Clear Navigation",
        icon:"./image/home-2/feature-icon-02.svg",
        text:"Fully layered dolor adipisicing elit <br class='d-none d-xl-block'> facere, nobis, id expedita."
    },
    {   id:3,
        title:"Over 800 Clients",
        icon:"./image/home-2/feature-icon-03.svg",
        text:"Fully layered dolor adipisicing elit <br class='d-none d-xl-block'> facere, nobis, id expedita."
    }

] %}
    <div class="feature-section-02">
        <div class="container">
