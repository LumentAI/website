                    <div class="col-xl-4 col-lg-5 col-md-5 col-sm-8 col-xs-9" data-aos="fade-up" data-aos-delay="{{ 200 * item.id }}" data-aos-duration="1000">
                        {{Widget.normal({
                                modifier:"widget-feature-02 widget-column-till-md text-center text-md-start",
                                iconImage:item.icon,
                                title:item.title,
                                text:item.text,
                                mode:"dark"
