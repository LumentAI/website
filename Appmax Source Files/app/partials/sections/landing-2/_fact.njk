{% macro render(options) %}
    {% import "components/_widget.njk" as Widget %}

    {% set counterData =[
        {
        iconImage:"./image/home-2/icon-1.png",
        title:"<span class='counter'>28</span>K",
        text:"Users"
        },
        {

        iconImage:"./image/home-2/icon-2.png",
        title:"<span class='counter'>13</span>K",
        text:"Download"
        },
        {

        iconImage:"./image/home-2/icon-3.png",
        title:"<span class='counter'>68</span>K",
        text:"Likes"
        },
        {

        iconImage:"./image/home-2/icon-4.png",
        title:"<span class='counter'>10</span>K",
        text:"5 Star Rating"
        }

]%}
    <div class="counter-section-02">
        <div class="container">
            <div class="row justify-content-center widgets-row-02">
                {%for item in counterData %}
                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-6">
                        {{Widget.column({
                    modifier:"widget-column-center widget-counter",
                    iconImage:item.iconImage,
                    fontImg:true,
                    title:item.title,
                    text:item.text
                })}}
                    </div>
                    {%endfor%}
                </div>
            </div>
        </div>
    {% endmacro %}