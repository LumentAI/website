{% macro render(args) %}
    {% import "components/_widget.njk" as Widget %}

    {% set counterData =[
        {
        iconClass:"fas fa-circle",
        title:"<span class='counter'>28</span>K",
        text:"Successful students"
        },
        {
        iconClass:"fas fa-circle",
        title:"<span class='counter'>13</span>K",
        text:"Total courses"
        },
        {
        iconClass:"fas fa-circle",
        title:"<span class='counter'>68</span>K",
        text:"Social Likes"
        },
        {
        iconClass:"fas fa-circle",
        title:"<span class='counter'>10</span>K",
        text:"5 Star Rating"
        }

]%}
    <div class="counter-section-05">
        <div class="container">
            <div class="row justify-content-center widgets-row-02 counter-section-05__widget">
                {%for item in counterData %}
                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                        {{Widget.column({
                            modifier:"widget-column-center widget-counter",
                            iconClass:item.iconClass,
                            fontIcon:true,
                            title:item.title,
                            text:item.text
                        })}}
                    </div>
                    {%endfor%}
                </div>
            </div>
        </div>
    {% endmacro %}