{% macro render(args) %}
    {% import "components/_widget.njk" as Widget %}
    {% set featureData = [
    {
        title:"Innovative Soluation ",
        iconImage:"./image/home-10/c-icon-1.svg",
        text:"Fully layered dolor sit amet, consectetur <br class='d-lg-block d-none'>adipisicing elit. Dolores officiis laboriosam."
    },
    {
        title:"Clear Navigation",
        iconImage:"./image/home-10/c-icon-2.svg",
        text:"Fully layered dolor sit amet, consectetur <br class='d-lg-block d-none'>adipisicing elit. Dolores officiis laboriosam."
    }

] %}
    <div class="content-section-23">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-6 col-lg-6 col-md-7 col-xs-10 col-sm-10 order-lg-2">
                    <div class="content-section-23__image-group mb-mobile-lg"  data-aos="fade-left" data-aos-delay="1300" data-aos-duration="1000">
                        <img src="./image/home-10/content-2.png" alt="content-img" class="mw-100">
                        <div class="content-section-23__image-group--shape">
                            <img src="./image/home-10/content-2-shape.svg" class="w-100" alt="shape">
                        </div>
                        <div class="content-section-23__image-group--m-1 floating-Y-animation-reverse">
                            <img src="./image/home-10/m-1.png" class="w-100" alt="card">
                        </div>
                        <div class="content-section-23__image-group--m-2 floating-Y-animation">
                            <img src="./image/home-10/m-2.png" class="w-100" alt="card">
                        </div>
                    </div>
                </div>
                <div class="col-xl-5 col-lg-6 col-md-9 col-11">
                    <div class="block-title content-section-23__content" data-aos="fade-up" data-aos-duration="800">
                        <h6 class="subtitle text-secondary mb-20">Awesome software</h6>
                        <h2 class="title">Receive and send emails on the same page</h2>
                        <p class="text-dark">An enim nullam tempor sapien gravida donec enim ipsum <br class="d-none d-xl-block">porta justo integer at odio velna vitae auctor integer</p>
                    </div>
                    <div class="row content-section-23__widget">
                        {% for item in featureData %}
                            <div class="col-xl-12 col-lg-12 col-md-10 col-sm-6 col-xs-6 col-10 order-lg-1" data-aos="fade-up" data-aos-duration="800">
                                {{Widget.normal({
                                modifier:"widget-content widget-column-till-md",
                                iconImage:item.iconImage,
                                title:item.title,
                                text:item.text
                            })}}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}