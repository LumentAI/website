{% macro render(options) %}
    {% import "components/_widget.njk" as Widget %}

    {% set counterData =[
        {
        color:"text-green",
        title:"<span class='counter'>28</span>K",
        text:"Total Users"
        },
        {
        color:"text-red",
        title:"<span class='counter'>13</span>K",
        text:"Care Locations"
        },
        {
        color:"text-yellow",
        title:"<span class='counter'>68</span>K",
        text:"Virtual Care Solutions"
        },
        {
        color:"text-bule",
        title:"<span class='counter'>10</span>K",
        text:"Success Rate"
        }

]%}
    <div class="counter-section-08">
        <div class="container">
            <div class="counter-section-08__wrapper">
                <div class="row justify-content-center widgets-row-02">
                    {%for item in counterData %}
                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-xs-6 col-12">
                            {{Widget.counter({
                            modifier:"widget widget-column widget-column-center widget-counter",
                            textClass:item.color,
                            title:item.title,
                            text:item.text
                        })}}
                        </div>
                        {%endfor%}
                    </div>
                </div>
            </div>
        </div>
    {% endmacro %}